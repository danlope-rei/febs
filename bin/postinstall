#! /bin/bash

# febs postinstall script

set -e

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
#export NODE_PATH=$( $DIR/node-get-path )

# Print some debug info
#echo "[febs-node] CWD:       `pwd`"
#echo "[febs-node] NODE_PATH: $NODE_PATH"
echo "[rei-febs] post-install.."

# Copy the index file template for dev-server
# Copying from <client-dir>/node_modules/rei-febs to <client-dir>
CLIENT_DIR="../.."

if [ ! -e "$CLIENT_DIR/index.html" ]; then
  cp templates/index.html "$CLIENT_DIR/."
fi

# Create src dir/content if doesn't exist.
if [ ! -d "$CLIENT_DIR/src" ]; then
  mkdir "$CLIENT_DIR/src"
  cp templates/entry.js "$CLIENT_DIR/src/."
  cp templates/entry.less "$CLIENT_DIR/src/."
fi


# Proxy arguments to the system node binary
#node "$@"
